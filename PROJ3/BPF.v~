`timescale 1ns/1ps

module BPF
  (
   input CLK,
   input CAL_BPF,
   input PU_BPF,
   output RDY_BPF
   );

   reg    CAL_BPF_STA=0;
   reg 	  RDY_BPF=0;
   reg    AUX = 0;
   
   always@ (posedge CLK)
     begin
	if(PU_BPF)
	  begin
	     AUX= #2000 1;
	  end
	if(CAL_BPF & AUX)
	  begin
	     CAL_BPF_STA=1;
	     CAL_BPF_STA= #5000 0;
	     RDY_BPF= #2000 1;
	  end
	end
      


endmodule //BPF
